<UserControl x:Class="telecom_demo.AuthUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:telecom_demo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0">Логин</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Margin="5">Пароль</TextBlock>
                <TextBox Grid.Column="1" Grid.Row="0" Name="LoginTextBox" Margin="5"></TextBox>
                <TextBox Grid.Column="1" Grid.Row="1" Name="PasswordTextBox" Margin="5"></TextBox>

            </Grid>
            <Button Name="LoginButton" Click="LoginButton_OnClick">войти</Button>
        </StackPanel>

    </Grid>
</UserControl>
