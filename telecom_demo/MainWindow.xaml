<Window x:Class="telecom_demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:telecom_demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2.8*"/>
        </Grid.RowDefinitions>
        
        <StackPanel HorizontalAlignment="Right">
            <TextBlock HorizontalAlignment="Right" Name="MainTextBlock"></TextBlock>
            <Button Name="BackButton" Click="BackButton_OnClick">Назад</Button>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center" Name="TitleTextBlock"></TextBlock>

        <ContentControl Grid.Row="1" Name="MainContentControl"></ContentControl>
    </Grid>
</Window>
