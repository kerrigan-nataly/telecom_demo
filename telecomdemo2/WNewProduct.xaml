<Window x:Class="telecomdemo2.WNewProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:telecomdemo2"
        mc:Ignorable="d"
        Title="WNewProduct" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Название компонента -->
        <Label Grid.Row="0" Grid.Column="0" Content="Название компонента:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtNameComponent" Margin="5" Padding="5"/>

        <!-- Тип компонента -->
        <Label Grid.Row="1" Grid.Column="0" Content="Тип компонента:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbComponentType" Margin="5" Padding="5"
                  DisplayMemberPath="NameComponentType" SelectedValuePath="IdComponentType" FontSize="5"/>

        <!-- Производитель -->
        <Label Grid.Row="2" Grid.Column="0" Content="Производитель:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cmbManufacturer" Margin="5" Padding="5"
                  DisplayMemberPath="NameManufacturer" SelectedValuePath="IdManufacturer"/>

        <!-- Характеристики -->
        <Label Grid.Row="3" Grid.Column="0" Content="Характеристики:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtCharacteristic" Margin="5" Padding="5" Height="60" 
                 TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Единица измерения -->
        <Label Grid.Row="4" Grid.Column="0" Content="Единица измерения:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtUnit" Margin="5" Padding="5"/>

        <!-- Минимальный запас -->
        <Label Grid.Row="5" Grid.Column="0" Content="Мин. запас:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtMinStorage" Margin="5" Padding="5" 
                 PreviewTextInput="NumberValidationTextBox"/>

        <!-- Максимальный запас -->
        <Label Grid.Row="6" Grid.Column="0" Content="Макс. запас:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtMaxStorage" Margin="5" Padding="5"
                 PreviewTextInput="NumberValidationTextBox"/>

        <!-- Срок годности -->
        <Label Grid.Row="7" Grid.Column="0" Content="Срок годности:" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="7" Grid.Column="1" x:Name="dpExpirationDate" Margin="5" Padding="5"/>

        <!-- Температурный режим -->
        <Label Grid.Row="8" Grid.Column="0" Content="Температурный режим:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="8" Grid.Column="1" x:Name="cmbTemperatureMode" Margin="5" Padding="5"
                  DisplayMemberPath="DisplayName" SelectedValuePath="IdTemperatureMode"/>

        <!-- Склад -->
        <Label Grid.Row="9" Grid.Column="0" Content="Склад:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="9" Grid.Column="1" x:Name="cmbStorage" Margin="5" Padding="5"
                  DisplayMemberPath="DisplayInfo" SelectedValuePath="IdStorage"/>

        <!-- Количество на складе -->
        <Label Grid.Row="10" Grid.Column="0" Content="Количество:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="10" Grid.Column="1" x:Name="txtComponentCount" Margin="5" Padding="5"
                 PreviewTextInput="NumberValidationTextBox"/>

        <!-- Предупреждение о температурном режиме -->
        <Border Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" 
                x:Name="borderWarning" 
                Background="#FFFFE0" 
                BorderBrush="#FFC080" 
                BorderThickness="1" 
                CornerRadius="5"
                Margin="5"
                Visibility="Collapsed">
            <StackPanel Margin="10">
                <TextBlock x:Name="txtWarning" 
                           TextWrapping="Wrap" 
                           Foreground="#996633" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"
                    Margin="5">
            <Button x:Name="btnAdd" 
                    Content="Добавить" 
                    Width="100" 
                    Height="35" 
                    Margin="5"
                    Click="btnAdd_Click"/>
            <Button x:Name="btnCancel" 
                    Content="Отмена" 
                    Width="100" 
                    Height="35" 
                    Margin="5"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
