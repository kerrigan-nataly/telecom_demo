<Window x:Class="telecomdemo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:telecomdemo2"
        mc:Ignorable="d"
        Title="MainWindow" 
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Center" Name="TitleTextBlock"></TextBlock>
            <TextBlock HorizontalAlignment="Right" Name="MainTextBlock"></TextBlock>
            <Button Name="BackButton" Click="BackButton_OnClick">Назад</Button>
        </StackPanel>
        <ContentControl Grid.Row="1" Name="MainContentControl"></ContentControl>
    </Grid>
</Window>
