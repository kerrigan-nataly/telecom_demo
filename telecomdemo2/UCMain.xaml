<UserControl x:Class="telecomdemo2.UCMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:telecomdemo2"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель со статистикой -->
            <StackPanel Grid.Column="0" Margin="5">
                <!-- Заголовки с отступами -->
                <TextBlock Text="Статистика заказов" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       Margin="0,5,0,3"/>

                <!-- Список заказов -->
                <ListBox Name="OrderListBox" 
                     Height="60" 
                     Margin="0,0,0,10"
                     ItemsSource="{Binding Orders}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding NameOrder}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Срочные задачи -->
                <TextBlock Text="Срочные задачи (дедлайн скоро)" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       Margin="0,5,0,3"/>

                <ListBox Name="UrgentOrderListBox" 
                     Height="100" 
                     Margin="0,0,0,10"
                     ItemsSource="{Binding UrgentOrders}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding NameOrder}" 
                                       FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding DeadlineDate, StringFormat='Дедлайн: {0:dd.MM.yyyy}'}" 
                                       FontSize="11" 
                                       Foreground="Red"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Низкие поставки -->
                <TextBlock Text="Компоненты с низким запасом" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       Margin="0,5,0,3"/>

                <ListBox Name="ProductListBox" 
                     Height="60" 
                     Margin="0,0,0,10"
                     ItemsSource="{Binding LowStockComponents}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding NameComponent}" 
                                       Margin="0,0,5,0"/>
                                <TextBlock Text="(" />
                                <TextBlock Text="{Binding TotalStorageCount}" />
                                <TextBlock Text=" / " />
                                <TextBlock Text="{Binding MinStorage}" />
                                <TextBlock Text=")" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!-- Правая панель с графиками -->
            <StackPanel Grid.Column="1" 
                    Margin="15,5,5,5"
                    Orientation="Vertical">

                <TextBlock Text="Аналитика" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="0,0,0,10"/>

                <!-- график -->
                <Border BorderBrush="Gray" 
                        BorderThickness="1" 
                        Height="300" 
                        Margin="0,10"
                        Background="#F5F5F5"
                        Padding="10">

                    <lvc:CartesianChart x:Name="OrdersChartControl" 
                           LegendLocation="Top"
                           Hoverable="True"/>
                </Border>

                <!-- нави -->
                <StackPanel Name="ButtonsPanel" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,10">

                    <Button Name="OrderButton" 
                        Content="Заказы" 
                        Click="OrderButton_OnClick"/>

                    <Button Name="ProductButton" 
                        Content="Товар" 
                        Click="ProductButton_OnClick"/>

                    <Button Name="TestingButton" 
                        Content="Тесты" 
                        Click="TestingButton_OnClick"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
