<Window x:Class="telecomdemo2.WNewOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый заказ" Height="700" Width="950"
        WindowStartupLocation="CenterScreen"
        FontSize="14">

    <Window.Resources>
        <Style TargetType="Border" x:Key="DropZoneStyle">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="ListBoxItem" x:Key="DraggableItemStyle">
            <Setter Property="AllowDrop" Value="True"/>
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListBoxItem_PreviewMouseLeftButtonDown"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Создание нового заказа" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - Основная информация и доступные узлы -->
            <StackPanel Grid.Column="0" Margin="10">
                <GroupBox Header="Основная информация" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <StackPanel Margin="0,5">
                            <TextBlock Text="Название заказа:" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNameOrder" Padding="5"/>
                        </StackPanel>

                        <StackPanel Margin="0,10,0,5">
                            <TextBlock Text="Статус:" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbStatus" 
                                      DisplayMemberPath="NameStatus" 
                                      SelectedValuePath="IdStatus"
                                      Padding="5"/>
                        </StackPanel>

                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Дата начала:" Margin="0,0,0,5"/>
                                <DatePicker x:Name="dpStartDate" 
                                            SelectedDateFormat="Short"
                                            FirstDayOfWeek="Monday"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Дата окончания:" Margin="0,0,0,5"/>
                                <DatePicker x:Name="dpDeadlineDate" 
                                            SelectedDateFormat="Short"
                                            FirstDayOfWeek="Monday"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Доступные узлы для перетаскивания -->
                <GroupBox Header="Доступные узлы" Padding="10" Height="350">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Перетащите узлы в правую область" 
                                   FontStyle="Italic" Foreground="Gray" Margin="0,0,0,5"/>

                        <ListBox x:Name="lstAvailableNodes" Grid.Row="1"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 AllowDrop="True">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E3F2FD" Padding="8" Margin="2" CornerRadius="3">
                                        <StackPanel>
                                            <TextBlock Text="{Binding NameNode}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding NodeType.NameNodeType}" 
                                                       FontSize="11" Foreground="Gray"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource DraggableItemStyle}"/>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                </GroupBox>
            </StackPanel>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Center" 
                         VerticalAlignment="Stretch" Width="3" 
                         Background="#CCCCCC" ShowsPreview="True"/>

            <!-- Правая панель - Дроп-зона для узлов и расчет компонентов -->
            <StackPanel Grid.Column="2" Margin="10">
                <!-- Дроп-зона для узлов заказа -->
                <GroupBox Header="Узлы заказа" Padding="10" Height="350">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Style="{StaticResource DropZoneStyle}" 
                                Background="#FFF3E0" AllowDrop="True"
                                Drop="NodeDropZone_Drop"
                                DragOver="DropZone_DragOver"
                                Height="50">
                            <TextBlock Text="Перетащите узлы сюда" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      Foreground="Gray" 
                                      FontStyle="Italic"/>
                        </Border>

                        <ListBox x:Name="lstOrderNodes" Grid.Row="1" 
                                 MaxHeight="280" Margin="0,5,0,0"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF3E0" Padding="8" Margin="2" CornerRadius="3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Node.NameNode}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Node.NodeType.NameNodeType}" 
                                                           FontSize="11" Foreground="Gray"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                                       VerticalAlignment="Center" Margin="10,0">
                                                <TextBlock Text="Кол-во:" Margin="0,0,5,0" 
                                                           VerticalAlignment="Center"/>
                                                <TextBox Text="{Binding NodeCount, UpdateSourceTrigger=PropertyChanged}" 
                                                         Width="50" HorizontalContentAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         TextChanged="NodeCount_TextChanged"/>
                                            </StackPanel>

                                            <Button Grid.Column="2" Content="X" 
                                                    Width="20" Height="20"
                                                    Background="Red" Foreground="White"
                                                    Tag="{Binding}"
                                                    Click="RemoveNode_Click"
                                                    Margin="5,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </GroupBox>

                <!-- Расчет компонентов -->
                <GroupBox Header="Необходимые компоненты" Padding="10" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="На основе выбранных узлов:" 
                                   FontStyle="Italic" Margin="0,0,0,10"/>

                        <DataGrid x:Name="dgRequiredComponents" Grid.Row="1"
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Компонент" 
                                                    Binding="{Binding Component.NameComponent}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="Тип узла" 
                                                    Binding="{Binding NodeTypeName}"
                                                    Width="120"/>
                                <DataGridTextColumn Header="Количество" 
                                                    Binding="{Binding TotalComponents}"
                                                    Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Сводка -->
                        <StackPanel Grid.Row="2" Margin="0,10,0,0">
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Всего узлов:" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="1" x:Name="txtTotalNodes" Text="0"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Всего компонентов:" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="1" x:Name="txtTotalComponents" Text="0"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </Grid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="10">
            <Button x:Name="btnSave" Content="Сохранить" 
                    Width="100" Height="35" Margin="0,0,10,0"
                    Click="btnSave_Click"
                    Background="#4CAF50" Foreground="White"/>
            <Button x:Name="btnCancel" Content="Отмена" 
                    Width="100" Height="35"
                    Click="btnCancel_Click"
                    Background="#F44336" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>